{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noEmitHelpers": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "baseUrl": "./src"
    }
}